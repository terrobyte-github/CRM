#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = smxBaseClassesRTL.bpl smxClassesRTL.bpl smxCellsRTL.bpl dADO.dll \
  dBDE.dll rImages.dll aAlgs.dll CRM.exe Conf.exe cCells.dll
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------





smxBaseClassesRTL.bpl: BaseClassesRTL\smxBaseClassesRTL.dpk
  $(DCC)

smxClassesRTL.bpl: ClassesRTL\smxClassesRTL.dpk
  $(DCC)

smxCellsRTL.bpl: CellsRTL\smxCellsRTL.dpk
  $(DCC)

dADO.dll: dADO\dADO.dpr
  $(DCC)

dBDE.dll: dBDE\dBDE.dpr
  $(DCC)

rImages.dll: rImages\rImages.dpr
  $(DCC)

aAlgs.dll: aAlgs\aAlgs.dpr
  $(DCC)

CRM.exe: CRM\CRM.dpr
  $(DCC)

Conf.exe: Conf\Conf.dpr
  $(DCC)

cCells.dll: cCells\cCells.dpr
  $(DCC)


